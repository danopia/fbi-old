<h2>editing {{# project }}<a href="{{ show_path }}">{{ title }}</a> / <a href="{{ wiki_path }}{{/ project }}/show/{{ title }}">{{ title }}</a></h2>

<hr />

<div style="float: right; border-left: 1px solid #999; padding-left: 1em;">
  <h3>pages</h3>
  <ul style="list-style: none; padding: 0 0 0 1em; margin: 0;" class="fixedwidth">
  {{# pages }}
    <li><a href="{{# project }}{{ wiki_path }}{{/ project }}/show/{{ title }}">{{ title }}</a></li>
  {{/ pages }}
    <li><a href="{{# project }}{{ wiki_path }}{{/ project }}/new" style="color: gray;">new page</a></li>
  </ul>
</div>

<form method="post" action="{{# project }}{{ wiki_path }}{{/ project }}/save/{{ title }}">
  <textarea name="contents" cols="80" rows="10">{{ contents }}</textarea>
  <br />
  Message: <input type="text" value="Updated via web interface" name="message" size="100" />
  <br />
  <input type="submit" value="Save" />
</form>

<br clear="all" />
