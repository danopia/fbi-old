<h2>{{# project }}<a href="{{ show_path }}">{{ title }}</a> / <a href="{{ wiki_path }}">wiki</a> / {{/ project }}commit {{# commit }}{{ hash }}{{/ commit }}</h2>
<hr />

{{> views/wiki/_sidebar }}

{{# commit }}
  {{# author }}
  <p>Author: {{ name }}</p>
  {{/ author }}
  
  <p>Date: {{ date }}</p>
  
  <pre>{{ message }}</pre>
  
  {{# files }}
    <hr />
    <h3><a href="{{# project }}{{ wiki_path }}{{/ project }}/show/{{ path }}">{{ path }}</a></h3>
    <pre>{{ diff }}</pre>
  {{/ files }}
{{/ commit }}

<br clear="all" />
