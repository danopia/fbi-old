<h2>{{# project }}<a href="{{ show_path }}">{{ title }}</a> / {{/ project }}commit {{# commit }}{{ hash }}{{/ commit }}</h2>

<hr />

<div style="float: right; border-left: 1px solid #999; padding-left: 1em;">
  <h3>pages</h3>
  <ul style="list-style: none; padding: 0 0 0 1em; margin: 0;" class="fixedwidth">
  {{# pages }}
    <li><a href="/projects/ooc/wiki/show/{{ title }}">{{ title }}</a></li>
  {{/ pages }}
  </ul>
</div>

{{# commit }}
  {{# author }}
  <p>Author: {{ name }}</p>
  {{/ author }}
  
  <p>Date: {{ date }}</p>
  
  <pre>{{ message }}</pre>
  
  {{# files }}
    <hr />
    <h3><a href="{{# project }}{{ show_path }}{{/ project }}/wiki/show/{{ path }}">{{ path }}</a></h3>
    <pre>{{ diff }}</pre>
  {{/ files }}
{{/ commit }}

<br clear="all" />
